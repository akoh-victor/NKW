                        itemsDesktopSmall : [979,3],

                        navigation : false
                    });
                    $("#customersChoiceProducts").owlCarousel({
                        transitionStyle :true,
                        stopOnHover:true,
                        scrollPerPage:true,
                        autoPlay: 3000,
                        items : 4,
                        itemsDesktop : [1199,3],
                        itemsDesktopSmall : [979,3],
                        navigation : false
                    });
                    $("#selectedProducts").owlCarousel({
                        transitionStyle :true,
                        stopOnHover:true,
                        scrollPerPage:true,
                        autoPlay: 3000,
                        items : 1,
                        itemsDesktop : [1199,3],
                        itemsDesktopSmall : [979,3],

                        navigation : false
                    });

                    $("adverts").owlCarousel({
                        transitionStyle :true,
                        stopOnHover:true,
                        scrollPerPage:false,
                        autoPlay: 3000,
                        items : 1,
                        itemsDesktop : [1199,1],
                        itemsDesktopSmall : [979,1],

                        navigation : false
                    });
                });

            </script>
            <script>

                jQuery(function(){

                    jQuery('#selectedProduct').camera({
                        height: '450px',
                        width: '450px',
                        loader: 'none',
                        time: 99000000,
                        playPause: false,
                        pagination: false,
                        thumbnails: false,
                        transPeriod	: 10,
                        portrait:true

                    });

                });

            </script>
            <script type="text/javascript">
                var navigation = $('#nav-main').okayNav();
            </script>
        {% endblock %}
 </body>
</html>
