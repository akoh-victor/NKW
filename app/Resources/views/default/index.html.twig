{% block content %}

<h1 class="small" >Featured Departments</h1>

    {% for department in departments %}

            <div class="col-sm-6" >
                <div style=" margin: 12px 0px;  ">
                    <a href="/department/{{ department.id }}">
                        <img src="{{ vich_uploader_asset(department, 'logoFile') }}" alt="{{ department.name }}"
                             style="height: 30em; width: 38em"></a>
                </div>
              <div style=" margin: 0px 0px 50px; font-family: cursive;
margin-left: 0px;
text-overflow: clip;
height: 118px;
width: 420px;
white-space: normal;
padding: 0px;">
                  <h3>{{ department.topic }}</h3>
                  <p>{{ department.description }}</p>
              </div>
            </div>

    {% endfor %}


    {% if newArrivals is defined %}
        <div class="row">
            <div class="col-sm-12" >
                <h3>New Arrivals</h3>
                <div id="newProducts" class="owl-carousel">
                    {% for product in newArrivals %}
                    <div class="thumbnail carouselProducts">
                        <a href="/brows/{{ product.id }}">
                          <img src="{{ vich_uploader_asset(product, 'frontImageFile') }}" alt="" style="width:auto;  height:200px">
                          <div class="carouselProductsCaption">
                              <div class="prodPrice">{{ product.price |price }}</div>
                              <div class="prodTitle">{{ product.name  |title}}</div>
                          </div>
                        </a>
                    </div>
                    {%  endfor %}
                </div>
            </div>
        </div>
    {% endif %}


